<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Truck Haulers Cart</title>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <%- include("partials/head") %>

        <style>
            /* Flexbox layout to keep footer at bottom */
            html,
            body {
                height: 100%;
                margin: 0;
                padding: 0;
            }

            body {
                display: flex;
                flex-direction: column;
                min-height: 100vh;
            }

            main {
                flex-grow: 1;
            }
        </style>
</head>

<body class="bg-light">
    <%- include("partials/navbar") %>

        <main class="container my-5">
            <h2 class="mb-5 text-center fw-bold">ðŸ›’ Your Shopping Cart</h2>

            <% if (items.length> 0) { %>
                <% items.forEach(item=> { %>
                    <div class="row cart-item align-items-center p-3 mb-4 mx-1 border rounded flex-column flex-md-row"
                        data-id="<%= item.product._id %>">

                        <div class="col-12 col-md-2 mb-3 mb-md-0">
                            <img src="<%= item.product?.productImages[0] || '' %>" class="img-fluid"
                                alt="<%= item.product?.name ?? 'Product image' %>">
                        </div>

                        <div class="col-12 col-md-4 mb-3 mb-md-0">
                            <h6 class="mb-1 text-muted">Product</h6>
                            <p class="fw-semibold mb-0 text-dark">
                                <%= item.product?.name ?? 'Unknown' %>
                            </p>
                        </div>

                        <div class="col-12 col-md-2 mb-3 mb-md-0">
                            <h6 class="text-muted">Quantity</h6>
                            <div class="d-flex align-items-center">
                                <button class="btn btn-sm btn-outline-secondary decrement-btn" <%=item.quantity===1
                                    ? 'disabled' : '' %>>-</button>
                                <span class="mx-2 fw-semibold quantity">
                                    <%= item.quantity %>
                                </span>
                                <button class="btn btn-sm btn-outline-secondary increment-btn">+</button>
                            </div>
                        </div>

                        <div class="col-12 col-md-2 mb-3 mb-md-0">
                            <h6 class="text-muted">Subtotal</h6>
                            <p class="fw-semibold subtotal">â‚¹<%= item.product.price * item.quantity %>
                            </p>
                        </div>

                        <div class="col-12 col-md-2 text-md-end">
                            <button class="btn btn-md bg-danger btn-remove text-white">Remove</button>
                        </div>
                    </div>
                    <% }) %>

                        <!-- Order Summary -->
                        <div class="row mt-5">
                            <div class="col-md-6 offset-md-6">
                                <div class="summary-box shadow-sm p-4 bg-white rounded">
                                    <h5 class="fw-bold">Order Summary</h5>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Total Items:</span>
                                        <strong id="totalQuantity">
                                            <%= quantity %>
                                        </strong>
                                    </div>
                                    <div class="d-flex justify-content-between mb-4">
                                        <span>Total Price:</span>
                                        <strong>â‚¹<span id="totalAmount">
                                                <%= total %>
                                            </span></strong>
                                    </div>
                                    <a href="/checkout" class="text-decoration-none">
                                        <button class="btn btn-primary w-100 fw-bold">Proceed to Checkout</button>
                                    </a>
                                </div>
                            </div>
                        </div>

                        <% } else { %>
                            <!-- Empty Cart -->
                            <div class="text-center mt-5">
                                <img src="https://cdn-icons-png.flaticon.com/512/1170/1170678.png"
                                    class="empty-cart-img" alt="Empty Cart" style="max-width:150px;">
                                <h4 class="fw-bold mt-3">Your cart is currently empty</h4>
                                <p class="text-muted">Looks like you haven't added anything yet.</p>
                                <a href="/products" class="btn btn-outline-primary mt-3 fw-bold">Start Shopping</a>
                            </div>
                            <% } %>
        </main>

        <%- include("partials/scrollUp") %>
            <%- include("partials/footer") %>
                <%- include("partials/scripts") %>

                    <script>
                        $(function () {
                            // Increment quantity
                            $(".increment-btn").click(function () {
                                const row = $(this).closest(".cart-item");
                                const productId = row.data("id");
                                $.post(`/cart/increment/${productId}`, function (res) {
                                    updateCartRow(row, res);
                                });
                            });

                            // Decrement quantity
                            $(".decrement-btn").click(function () {
                                const row = $(this).closest(".cart-item");
                                const productId = row.data("id");
                                $.post(`/cart/decrement/${productId}`, function (res) {
                                    if (res.quantity === 0) {
                                        row.remove();
                                    } else {
                                        updateCartRow(row, res);
                                    }
                                    if (res.totalQuantity === 0) location.reload();
                                });
                            });

                            // Remove item from cart
                            $(".btn-remove").click(function () {
                                const row = $(this).closest(".cart-item");
                                const productId = row.data("id");
                                $.post(`/remove-item/${productId}`, function (res) {
                                    row.remove();
                                    $("#totalAmount").text(res.total);
                                    $("#totalQuantity").text(res.totalQuantity);
                                    if (res.totalQuantity === 0) location.reload();
                                });
                            });

                            function updateCartRow(row, data) {
                                row.find(".quantity").text(data.quantity);
                                row.find(".subtotal").text("â‚¹" + data.subTotal);
                                row.find(".decrement-btn").prop("disabled", data.quantity === 1);
                                $("#totalAmount").text(data.total);
                                $("#totalQuantity").text(data.totalQuantity);
                            }
                        });
                    </script>
</body>

</html>