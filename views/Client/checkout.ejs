<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Truck Haulers Vehicle Checkout</title>
  <%- include("partials/head") %>
  <style>
    body {
      background-color: #f8f9fa;
    }

    header {
      background: linear-gradient(135deg, #0d6efd, #6610f2);
      color: white;
      box-shadow: 0 4px 10px rgba(13, 110, 253, 0.4);
    }

    .cart-item {
      background: #fff;
      border-radius: 0.75rem;
      box-shadow: 0 4px 12px rgb(0 0 0 / 0.05);
      transition: box-shadow 0.3s ease;
      padding: 1rem;
      margin-bottom: 1.25rem;
    }

    .cart-item:hover {
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
    }

    .badge-price {
      background-color: #0d6efd;
      font-weight: 600;
      font-size: 1rem;
      color: #fff;
      border-radius: 50px;
      padding: 0.5rem 1rem;
      white-space: nowrap;
      box-shadow: 0 4px 10px rgba(13, 110, 253, 0.6);
    }

    /* Fix for product image container */
    .img-thumb {
      width: 100px;
      height: 70px;
      border-radius: 0.5rem;
      overflow: hidden;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .img-thumb img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  </style>
</head>

<body>
  <%- include("partials/preLoader") %>

  <header class="text-center py-5">
    <div class="container">
      <h1 class="display-4 fw-bold">Truck Haulers Checkout</h1>
      <p class="lead">Review your vehicle order and complete your purchase</p>
    </div>
  </header>

  <section class="container py-5">
    <h2 class="text-center mb-5 fw-bold">Order Checkout</h2>
    <div class="row g-4">

      <!-- Cart Items -->
      <div class="col-lg-8">
        <h4 class="mb-3 fw-semibold">Vehicles in Your Cart</h4>
        <div>
          <% items.forEach(item => { %>
          <div class="cart-item d-flex align-items-center justify-content-between">
            <!-- Image Gallery Thumbnail -->
            <div class="img-thumb me-3">
              <img src="<%= item.product.productImages[1] || '' %>" alt="<%= item.product.name %>" />
            </div>

            <!-- Product Info -->
            <div class="flex-grow-1">
              <h5 class="fw-bold mb-1"><%= item.product.name %></h5>
              <p class="mb-2 text-muted small"><%= item.product.description %></p>
              <p class="mb-0"><strong>Quantity:</strong> <%= item.quantity %></p>
            </div>

            <!-- Price Badge -->
            <span class="badge-price">Rs. <%= item.product.price * item.quantity %></span>
          </div>
          <% }) %>
        </div>
      </div>

      <!-- Order Summary -->
      <div class="col-lg-4">
        <div class="bg-white p-4 rounded-4 shadow-sm">
          <h5 class="text-center mb-4 fw-bold border-bottom pb-3">Order Summary</h5>
          <ul class="list-group mb-4">
            <li class="list-group-item d-flex justify-content-between border-0 border-bottom py-2">
              <span>Subtotal</span>
              <strong>Rs. <%= cart.items.reduce((sum, item) => sum + item.product.price * item.quantity, 0) %></strong>
            </li>
            <li class="list-group-item d-flex justify-content-between border-0 border-bottom py-2">
              <span>Tax (30%)</span>
              <strong>Rs. <%= cart.items.reduce((sum, item) => sum + item.product.price * item.quantity * 0.3, 0) %></strong>
            </li>
            <li class="list-group-item d-flex justify-content-between border-0 border-bottom py-2">
              <span>Shipping</span>
              <strong>Free</strong>
            </li>
            <li class="list-group-item d-flex justify-content-between border-0 pt-3 fw-bold fs-5">
              <span>Total</span>
              <span class="text-primary">
                Rs. <%= cart.items.reduce((sum, item) => sum + item.product.price * item.quantity * 1.3, 0) %>
              </span>
            </li>
          </ul>

          <!-- Buyer Info -->
          <h6 class="text-center mb-3 fw-semibold">Buyer Information</h6>
          <form action="/order-summary" method="POST" novalidate>
            <div class="mb-3">
              <label class="form-label fw-semibold" for="fullName">Full Name</label>
              <input type="text" id="fullName" class="form-control" value="<%= userDetails.name %>" readonly />
            </div>
            <div class="mb-3">
              <label class="form-label fw-semibold" for="email">Email Address</label>
              <input type="email" id="email" class="form-control" value="<%= userDetails.email %>" readonly />
            </div>

            <!-- Address Dropdown -->
            <div class="mb-3">
              <label class="form-label fw-semibold" for="addressSelect">Select Address</label>
              <select class="form-select" id="addressSelect" name="selectedAddress" required>
                <% userDetails.addresses.forEach((address, index) => { %>
                <option value="<%= index %>">
                  <%= address.street %>, <%= address.city %>, <%= address.state %> - <%= address.pincode %>
                </option>
                <% }) %>
              </select>
            </div>

            <!-- Shipping Address Fields -->
            <div class="mb-4">
              <h6 class="text-center fw-bold pb-2">Shipping Address</h6>
              <input type="text" class="form-control mb-2" name="address[street]" id="street" placeholder="Street" required />
              <input type="text" class="form-control mb-2" name="address[city]" id="city" placeholder="City" required />
              <input type="text" class="form-control mb-2" name="address[district]" id="district" placeholder="District" required />
              <input type="text" class="form-control mb-2" name="address[state]" id="state" placeholder="State" required />
              <input type="text" class="form-control mb-2" name="address[pincode]" id="pincode" placeholder="Pincode" required />
            </div>

            <!-- Payment -->
            <div class="mb-4">
              <label class="form-label fw-semibold" for="paymentMethod">Payment Method</label>
              <select name="paymentMethod" id="paymentMethod" class="form-select" required>
                <option value="" disabled selected>Select Payment Method</option>
                <option value="cod">Cash on Delivery</option>
                <option value="online">Stripe</option>
              </select>
            </div>
            <div class="mb-3">
              <label class="form-label fw-semibold" for="couponCode">Coupon Code</label>
              <input type="text" class="form-control" name="couponCode" id="couponCode" placeholder="Enter your coupon code"
                value="<%= typeof couponCode !== 'undefined' ? couponCode : '' %>" />
            </div>

            <button type="submit" class="btn btn-primary w-100 rounded-pill">Complete Purchase</button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="text-center py-4 text-muted" style="background-color: #e9ecef;">
    <p class="mb-0" style="font-size: 0.9rem;">&copy; 2025 Truck Haulers. All rights reserved.</p>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const addresses = <%- JSON.stringify(userDetails.addresses) %>;

    const streetInput = document.getElementById('street');
    const cityInput = document.getElementById('city');
    const districtInput = document.getElementById('district');
    const stateInput = document.getElementById('state');
    const pincodeInput = document.getElementById('pincode');

    const addressSelect = document.getElementById('addressSelect');

    function fillAddressFields(index) {
      if (index >= 0 && index < addresses.length) {
        const address = addresses[index];
        streetInput.value = address.street || '';
        cityInput.value = address.city || '';
        districtInput.value = address.district || '';
        stateInput.value = address.state || '';
        pincodeInput.value = address.pincode || '';
      }
    }

    // Initialize with first address selected by default
    fillAddressFields(0);

    // Event listener for dropdown change
    addressSelect.addEventListener('change', function () {
      const selectedIndex = parseInt(this.value, 10);
      fillAddressFields(selectedIndex);
    });
  </script>
</body>

</html>
