<!DOCTYPE html>
<html lang="en">
<%- include("partials/head") %>

    <head>
        <title>Exciting Offers | Truck Haulers</title>
        <style>
            html,
            body {
                height: 100%;
                margin: 0;
                display: flex;
                flex-direction: column;
            }

            main {
                flex: 1;
            }

            .coupon-card {
                border: 2px dashed #003366;
                background: #f8f9fa;
                padding: 20px;
                border-radius: 15px;
                transition: transform 0.2s;
                height: 100%;
            }

            .coupon-card:hover {
                transform: scale(1.02);
            }

            @media (max-width: 575.98px) {
                .coupon-card {
                    padding: 15px;
                    font-size: 15px;
                }

                h5 {
                    font-size: 1.1rem;
                }
            }
        </style>
    </head>

    <body>
        <%- include("partials/navbar") %>

            <main>
                <section class="py-5 bg-light text-center">
                    <div class="container">
                        <h1 class="fw-bold mb-4 text-primary">Available Coupons & Offers</h1>
                        <p class="mb-5 text-muted">Grab the best deals before they expire!</p>

                        <div class="row g-4">
                            <% coupons.forEach(coupon=> { %>
                                <div class="col-12 col-sm-6 col-lg-4 d-flex">
                                    <div class="coupon-card shadow-sm w-100">
                                        <h5 class="fw-bold text-success mb-3">
                                            <span class="coupon-code">
                                                <%= coupon.code %>
                                            </span>
                                        </h5>
                                        <p><strong>Discount:</strong> â‚¹<%= coupon.discountAmount %> off</p>
                                        <p><strong>Expires On:</strong>
                                            <%= coupon.expiryDate.toDateString() %>
                                        </p>
                                        <p class="text-muted small">Use this code at checkout to enjoy the discount.</p>
                                    </div>
                                </div>
                                <% }) %>
                        </div>
                    </div>
                </section>
            </main>

            <%- include("partials/footer") %>
                <%- include("partials/scripts") %>
    </body>

</html>